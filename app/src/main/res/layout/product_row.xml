<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/storename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store Name"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:textColor="#0CDC14"/>

    <TextView
        android:id="@+id/current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current:"
        android:textSize="20sp"
        android:paddingTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/storename"
        android:textColor="#030D45"/>

    <TextView
        android:id="@+id/hour1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hour1:"
        android:textSize="20sp"
        android:paddingTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/current"
        android:textColor="#030D45"/>

    <TextView
        android:id="@+id/currentval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:textColor="#014942"
        app:layout_constraintTop_toBottomOf="@id/storename"
        app:layout_constraintLeft_toRightOf="@id/current"
        android:text="Current" />

    <TextView
        android:id="@+id/hour1val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:textColor="#014942"
        app:layout_constraintTop_toBottomOf="@id/current"
        app:layout_constraintLeft_toRightOf="@id/hour1"
        android:text="Hour1" />

    <TextView
        android:id="@+id/hour2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hour2:"
        android:textSize="20sp"
        android:paddingTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/hour1"
        android:textColor="#030D45"/>

    <TextView
        android:id="@+id/hour2val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:textColor="#014942"
        app:layout_constraintTop_toBottomOf="@id/hour1"
        app:layout_constraintLeft_toRightOf="@id/hour2"
        android:text="Hour2" />

    <TextView
        android:id="@+id/hour3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hour3:"
        android:textSize="20sp"
        android:paddingTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/hour2"
        android:textColor="#030D45"/>

    <TextView
        android:id="@+id/hour3val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:textColor="#014942"
        app:layout_constraintTop_toBottomOf="@id/hour2"
        app:layout_constraintLeft_toRightOf="@id/hour3"
        android:text="Hour3" />
</androidx.constraintlayout.widget.ConstraintLayout>